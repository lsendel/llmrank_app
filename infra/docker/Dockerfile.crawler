# Multi-stage Dockerfile for the Rust Crawler

# --- Builder Stage ---
FROM rust:1.93-slim-bookworm AS builder

WORKDIR /usr/src/crawler
COPY apps/crawler/Cargo.toml apps/crawler/Cargo.lock ./

# Create dummy src for dependency caching
RUN mkdir src && echo "fn main() {}" > src/main.rs
RUN cargo build --release && rm -rf src target/release/deps/crawler*

# Copy actual source and build
COPY apps/crawler/src/ src/
RUN cargo build --release

# --- Runtime Stage ---
FROM node:20-slim

WORKDIR /app

# Install Chromium, curl (for healthcheck), and runtime deps
RUN apt-get update && apt-get install -y --no-install-recommends \
    chromium \
    ca-certificates \
    openssl \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install Lighthouse globally (pinned version)
RUN npm install -g lighthouse@13.0.3

# Copy the binary from builder
COPY --from=builder /usr/src/crawler/target/release/crawler /usr/local/bin/crawler

ENV CHROME_PATH=/usr/bin/chromium
ENV RUST_LOG=info
ENV PORT=3000

EXPOSE 3000

CMD ["crawler"]
